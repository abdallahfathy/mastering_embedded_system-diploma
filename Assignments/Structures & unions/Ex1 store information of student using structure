#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
struct student
{
	char name[10];
	int rollnumber;
	float marks;
};


int main(void)
{
	struct student x;
	printf("enter information of students\n");
	fflush(stdin);fflush(stdout);
	printf("enter name : ");
	fflush(stdin);fflush(stdout);
	scanf("%s",x.name);
	printf("enter roll number : ");
	fflush(stdin);fflush(stdout);
	scanf("%d",&x.rollnumber);
	printf("enter marks : ");
	fflush(stdin);fflush(stdout);
	scanf("%f",&x.marks);
	printf("\nDisplaying information\n");
	fflush(stdin);fflush(stdout);
	printf("name : %s \nRoll : %d\nmarks : %f ",x.name,x.rollnumber,x.marks);
	return 0;
}
