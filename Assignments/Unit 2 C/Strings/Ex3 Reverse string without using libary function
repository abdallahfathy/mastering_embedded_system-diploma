
#include"stdio.h"
#include "string.h"

int main (){
	char text[100],text2[100];
	int i=0,j=0,len;
	printf ("Enter a string : ");
	fflush(stdout);fflush(stdin);
	gets(text);
	len=strlen(text);
	for(i=len-1;i>=0;i--,j++){
		text2[j]=text[i];
	}
	i=0;
	printf("reverse string = ");
	while(i<len){
		printf("%c",text2[i]);
		i++;

	}
	return 0;
}
