#include"stdio.h"
#include "string.h"

int factorial (int num);
int main (){
	int n ;
	printf("enter an positive integer : ");
	fflush(stdout);
	scanf("%d",&n);
	printf("Factrial of %d = %d",n,factorial(n));
	return 0;
}
int factorial(int num)
{
	int result;
	if(num>=1)
	{
		result= num*factorial(num-1);
		return result;
	}
	else
	{
		return 1;
	}


}
